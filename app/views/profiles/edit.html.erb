<div class="max-w-md m-4 bg-white p-6 rounded-lg shadow-md">
  <h3 class="text-center text-black ">Modifier mon profil</h3>
  <%= simple_form_for @user, url: profile_path(@user), method: :patch, html: { class: "space-y-4" } do |f| %>
    <div>
      <%= f.input :first_name, label: false, input_html: { class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" }, placeholder: "First Name" %>
    </div>
    <div>
      <%= f.input :last_name, label: false, input_html: { class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" }, placeholder: "Last Name" %>
    </div>
    <div>
      <%= f.input :username, label: false, input_html: { class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" }, placeholder: "Username" %>
    </div>
    <div>
      <%= f.input :address, label: false, input_html: { class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" }, placeholder: "Address" %>
    </div>
    <div>
      <%= f.input :photo, label: false, input_html: { class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" } %>
    </div>
    <div>
      <%= f.submit "Save", class: "w-full bg-orange-500 text-white py-3 rounded-lg font-semibold hover:bg-orange-600 focus:ring-4 focus:ring-indigo-300 focus:outline-none" %>
    </div>
  <% end %>
</div>
