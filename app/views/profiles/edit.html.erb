<div class="relative h-screen">
  <div class="container-login max-w-md mx-auto p-6">
    <h3 class="text-xl font-bold text-left text-white mb-6 mt-safe-offset-20">Modifier mon profil</h3>
    <%= simple_form_for @user, url: profile_path(@user), method: :patch, html: { class: "space-y-4" } do |f| %>
      <div class="form-inputs">
        <%= f.input :first_name, label: false, label_html: { class: "text-neutral-content" }, input_html: { class: "my-4 bg-gray-800 text-white placeholder:italic placeholder:text-slate-400 block w-full border border-white rounded-md py-3 shadow-sm focus:outline-none focus:border-orange-500 focus:ring-orange-600 focus:ring-1 sm:text-sm" }, placeholder: "First Name" %>
        <%= f.input :last_name, label: false, label_html: { class: "text-neutral-content" }, input_html: { class: "my-4 bg-gray-800 text-white placeholder:italic placeholder:text-slate-400 block w-full border border-white rounded-md py-3 shadow-sm focus:outline-none focus:border-orange-500 focus:ring-orange-600 focus:ring-1 sm:text-sm"}, placeholder: "Last Name" %>
        <%= f.input :username, label: false, label_html: { class: "text-neutral-content" }, input_html: { class: "my-4 bg-gray-800 text-white placeholder:italic placeholder:text-slate-400 block w-full border border-white rounded-md py-3 shadow-sm focus:outline-none focus:border-orange-500 focus:ring-orange-600 focus:ring-1 sm:text-sm"}, placeholder: "Username" %>
        <%= f.input :address, label: false, label_html: { class: "text-neutral-content" }, input_html: { class: "my-4 bg-gray-800 text-white placeholder:italic placeholder:text-slate-400 block w-full border border-white rounded-md py-3 shadow-sm focus:outline-none focus:border-orange-500 focus:ring-orange-600 focus:ring-1 sm:text-sm"}, placeholder: "Address" %>
        <%= f.input :photo, label: false, label_html: { class: "text-neutral-content" }, input_html: { class: "my-4 bg-gray-800 text-white placeholder:italic placeholder:text-slate-400 block w-full border border-white rounded-md py-3 shadow-sm focus:outline-none focus:border-orange-500 focus:ring-orange-600 focus:ring-1 sm:text-sm"} %>
        <%= f.submit "Sauvegarder", class:"w-full bg-orange-500 text-white py-3 px-6 rounded-lg text-lg font-bold active:bg-orange-ยง00" %>
      </div>
    <% end %>

    <hr class="my-3">
    <div class="mt-4 text-center">
      <%= link_to "Retour", :back, class:"text-white underline", data: { turbo_frame: "_top" } %>
    </div>
  </div>
</div>
