<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6">Create a New Trip</h2>
    <%= form_with(model: @destination, url: destinations_path, local: true, class: "space-y-4") do |form| %>
      <div>
        <%= form.label :address, class: "block text-gray-700" %>
        <%= form.text_field :address, value: "Lille", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= label_tag :start_date, "Start Date", class: "block text-gray-700" %>
        <%= date_field_tag :start_date, "2025-01-01", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= label_tag :end_date, "End Date", class: "block text-gray-700" %>
        <%= date_field_tag :end_date, "2025-01-02", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.submit "Verify Information", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>