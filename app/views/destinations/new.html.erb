<h1 class="text-2xl font-bold text-gray-800 mb-6">New Destination</h1>

<%= simple_form_for(@destination) do |f| %>
  <div class="mb-4">
    <%= f.input :address, label: 'Destination',
      input_html: { class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-lime-300 focus:border-lime-300" },
      label_html: { class: "block text-lime-600 font-medium mb-2" } %>
  </div>

  <div class="flex items-center gap-4">
    <%= link_to "Back", destinations_path, class: "bg-gray-300 text-gray-800 px-4 py-2 rounded-lg shadow hover:bg-gray-400" %>
    <%= f.button :submit, "Search", class: "bg-lime-500 text-white px-4 py-2 rounded-lg shadow hover:bg-lime-600" %>
  </div>
<% end %>