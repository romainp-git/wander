<turbo-frame action="replace" id="modal-frame">
  <div data-controller="stories">
    <div class="fixed inset-0 z-20 rounded-t-lg shadow-lg transition-transform duration-500 transform translate-y-full" data-controller="modal">
      <button class="absolute p-4 right-0 z-50" data-action="click->modal#close">
        <p class="icon icon-200 drop-shadow-xl text-4xl text-black">close</p>
      </button>

      <div data-stories-target="track" class="carousel-track flex transition-transform duration-1000 ease-in-out w-full h-full">
        <% suggestion.highlights.each do |highlight| %>
          <div data-stories-target="item" class="carousel-item w-full flex-shrink-0">
            <%= cl_image_tag highlight.photo.key, class: "w-full h-full object-cover" %>
          </div>
        <% end %>
      </div>

      <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex w-full gap-2 px-4">
        <div class="flex-1 bg-gray-300 h-1">
          <div data-stories-target="progressBar" class="h-full bg-gray-800"></div>
        </div>
        <div class="flex-1 bg-gray-300 h-1">
          <div data-stories-target="progressBar" class="h-full bg-gray-800"></div>
        </div>
        <div class="flex-1 bg-gray-300 h-1">
          <div data-stories-target="progressBar" class="h-full bg-gray-800"></div>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
