<div class="carousel-item w-44">
  <div class="relative overflow-hidden rounded-box w-full h-60 flex flex-col items-center">
    <%= cl_image_tag suggestion.photos.first.key, class: "w-full h-full object-cover" %>
    <div class="absolute inset-0 bg-gradient-to-b from-black to-transparent opacity-80 h-1/3"></div>
    <div class="absolute text-white w-full p-4">
      <h2 class="text-xs font-light mb-2">USA</h2>
      <p class="text-2xl font-bold font-playfair leading-6"><%= suggestion.city %></p>
    </div>
    <%= link_to suggestion_path(suggestion), data: { turbo_frame: "modal-frame" }, class: "absolute bottom-4 right-4 w-8 h-8 p-2 bg-black rounded-full flex items-center justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15" />
      </svg>
    <% end %>
  </div>
</div>
