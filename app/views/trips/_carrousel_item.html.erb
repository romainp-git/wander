
<%= link_to activity_path(activity), data: { turbo_frame: "_top" } do%>
  <div
  class="carousel-item snap-start bg-gray-800 bg-opacity-85 shadow-lg rounded-lg py-4 px-2 cursor-pointer hover:shadow-xl transition-shadow w-72 h-52 overflow-hidden"
  data-carrousel-target="item"
  data-carousel-index-value="<%= index %>"
>
  <!-- Photo -->
  <% if activity.photos.first.present? %>
    <%= cl_image_tag activity.photos.first.key, class: "rounded-full size-16 object-cover shrink-0" %>
  <% else %>
    <%= image_tag 'no_picture.jpg', class: "rounded-full size-20", alt: "No picture available" %>
  <% end %>

  <!-- Infos -->
  <div class="flex-col pl-4">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold text-white leading-5"><%= truncate(activity.name, length: 50, omission: "...") %></h3>
    </div>
    <p class="text-white text-xs mt-2"><%= truncate(activity.description, length: 80, omission: "...") %></p>
    <div class="flex items-center space-x-1 text-orange-400  mt-2">
      <% activity.global_rating.to_i.times do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 .587l3.668 7.429L24 9.753l-6 5.837 1.417 8.26L12 18.897l-7.417 4.953L6 15.59l-6-5.837 8.332-1.737z" />
        </svg>
      <% end %>
    </div>
    <div class="text-xs text-white mt-2 flex items-center gap-2">
      <p class="icon text-xs">location_on</p>
      <%= activity.address %>
    </div>
  </div>
</div>

<% end%>
