<div class="px-4">
  <div class="flex items-start gap-5 mb-2">
    <div class="flex flex-col flex-1">
      <p class="text-xl font-extralight text-white mb-4 ">Choisissez des genres d'activités :</p>
    </div>
  </div>

  <!-- Options -->
  <div class="grid grid-cols-2 gap-4 px-4">
    <% ["Culturel", "Nature", "Aventure", "Loisirs", "Détente", "Gastronomie", "Shopping", "Vie Nocturne", "Sportif"].each do |activity| %>
      <div>
        <label class="flex items-center gap-2 text-white">
          <%= f.check_box :categories, { multiple: true, class: "w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500" }, activity %>
          <span class="text-sm"><%= activity %></span>
        </label>
      </div>
    <% end %>
  </div>

  <div class="flex items-start gap-5 mt-4">
    <div class="flex flex-col flex-1">
      <p class="text-xl font-extralight text-white mb-4 ">Des idées en plus ?</p>
    </div>
  </div>

  <%= f.text_area :inspiration, class: "w-full px-2 textarea textarea-md", placeholder: "Propose-moi un lieu pour voir le coucher de soleil le vendredi soir" %>

</div>
