<div
  id="countup"
  class="relative flex flex-col items-center gap-4 text-white pt-6"
  data-controller="countup"
  data-countup-start-date-value="<%= start %>">
  <div class="grid auto-cols-max grid-flow-col gap-1 text-center">
    <div class="bg-neutral rounded-box text-neutral-content flex flex-col p-2 shadow-lg">
      <span class=" font-mono text-5xl text-white">
        <span data-countup-target="days"></span>
      </span>
      jours
    </div>
    <div class="bg-neutral rounded-box text-neutral-content flex flex-col p-2 shadow-lg">
      <span class=" font-mono text-5xl text-white">
        <span data-countup-target="hours"></span>
      </span>
      heures
    </div>
    <div class="bg-neutral rounded-box text-neutral-content flex flex-col p-2 shadow-lg">
      <span class=" font-mono text-5xl text-white">
        <span data-countup-target="minutes"></span>
      </span>
      min
    </div>
    <div class="bg-neutral rounded-box text-neutral-content flex flex-col p-2 shadow-lg">
      <span class=" font-mono text-5xl text-white">
        <span data-countup-target="seconds"></span>
      </span>
      sec
    </div>
  </div>
</div>
