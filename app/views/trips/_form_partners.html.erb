<div class="px-4">
  <div class="flex items-start gap-5 mb-2">
    <p class="text-sm font-medium text-white mt-1 flex-0">Step 3 :</p>
    <div class="flex flex-col flex-1">
      <p class="text-xl font-extralight text-white mb-4 ">Choisissez un nombre d'acompagnants :</p>
    </div>
  </div>

  <!-- Step 2 Section -->
  <div class="mt-8">
    <div class="flex items-center gap-4">
      <!-- Contact Avatars -->
      <div class="flex items-center gap-2">
        <img src="https://via.placeholder.com/40" alt="Vera" class="w-10 h-10 rounded-full border-2 border-white">
        <span>Vera</span>
      </div>
      <div class="flex items-center gap-2">
        <img src="https://via.placeholder.com/40" alt="Josie" class="w-10 h-10 rounded-full border-2 border-white">
        <span>Josie</span>
      </div>
      <div class="flex items-center gap-2">
        <img src="https://via.placeholder.com/40" alt="Ricardo" class="w-10 h-10 rounded-full border-2 border-white">
        <span>Ricardo</span>
      </div>
    </div>
    <div class="mt-4 flex items-center gap-2">
      <button class="flex items-center px-4 py-2 text-sm bg-white text-blue-600 rounded-full">
        Add contact +
      </button>
    </div>
  </div>

  <!-- Room and Guests Counters -->
  <div class="mt-8 bg-white bg-opacity-10 rounded-2xl p-4">
    <div class="flex flex-col gap-4">
      <!-- Adults -->
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-2">
          <span class="font-material text-white">person</span>
          <p class="text-white">Adulte(s)</p>
          <small class="text-gray-300 text-sm">13 ans ou plus</small>
        </div>
        <div class="flex items-center gap-4">
          <button class="w-8 h-8 bg-black text-white rounded-full">-</button>
          <span>3</span>
          <button class="w-8 h-8 bg-black text-white rounded-full">+</button>
        </div>
      </div>
      <!-- Children -->
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-2">
          <span class="material-icons text-white">child_friendly</span>
          <p class="text-white">Enfant(s)</p>
          <small class="text-gray-300 text-sm">2 à 13 ans</small>
        </div>
        <div class="flex items-center gap-4">
          <button class="w-8 h-8 bg-black text-white rounded-full">-</button>
          <span>0</span>
          <button class="w-8 h-8 bg-black text-white rounded-full">+</button>
        </div>
      </div>
      <!-- Infants -->
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-2">
          <span class="material-icons text-white">baby_changing_station</span>
          <p class="text-white">Bébé(s)</p>
          <small class="text-gray-300 text-sm">2ans et moins</small>
        </div>
        <div class="flex items-center gap-4">
          <button class="w-8 h-8 bg-black text-white rounded-full">-</button>
          <span>0</span>
          <button class="w-8 h-8 bg-black text-white rounded-full">+</button>
        </div>
      </div>
    </div>
  </div>


  <%= simple_form_for @trip, html: { class: "space-y-6" }  do |f| %>
  <% end %>
</div>
