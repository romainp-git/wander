<div class="px-4">
  <div class="flex flex-col flex-1">
    <p class="text-xl font-extralight text-white">Choisissez une destination :</p>
  </div>

  <%= simple_form_for @trip, html: { class: ""} do |f| %>
  <%= f.input :destination,
              label: false,
              class: "required",
              input_html: { placeholder: "Entrez une destination...",
              style:"all: unset;width: 100%;
                    border: solid 1px white;
                    display: block;
                    padding: 10px 20px;
                    box-sizing: border-box;
                    color: white;
                    font-weight: lighter;
                    margin-top: 15px;" },
              error_html: { class: "text-red-500 text-sm mt-2" }
                %>
  <% end %>
</div>

