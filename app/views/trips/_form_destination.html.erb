<div class="px-4">
  <div class="flex flex-col flex-1">
    <p class="text-lg font-extralight text-white">Choisissez une destination :</p>
  </div>

<%= f.input :destination,
            label: false,
            class: "required",
            input_html: { placeholder: "Paris, Rome, New York...",
            style:"all: unset;width: 100%;
                  border: solid 1px white;
                  display: block;
                  padding: 10px 20px;
                  box-sizing: border-box;
                  color: white;
                  font-weight: light;
                  margin-top: 15px;" },
            error_html: { class: "text-red-500 text-sm mt-2" }
              %>
</div>

<div class="carousel carousel-center w-screen pl-4 pr-20 gap-1" data-controller="carousel-suggestions">
  <div data-carousel-suggestions-target="item"
        class="scale-95">
    <div class="carousel-item w-44">
      <div class="relative overflow-hidden rounded-box w-full h-60 flex flex-col items-center justify-center bg-gradient-to-br from-orange-400 to-orange-700">
        <!-- <%= image_tag "rome", class: "w-full h-full object-cover opacity-50" %> -->
        <div class="absolute text-white w-full p-4">
          <p class="text-2xl font-bold font-playfair leading-6 mb-2">En panne d'idée ?</p>
          <p class="text-md leading-2">Découvrez les destinations les plus demandées par nos travellers</p>
        </div>
      </div>
    </div>

  </div>
  <% @suggestions.each do |suggestion| %>
    <div data-carousel-suggestions-target="item"
         class="scale-95 transition-all duration-500 opacity-75 cursor-pointer"
         data-value="<%= suggestion.city %>">
      <%= render 'shared/suggestion_card', suggestion: suggestion %>
    </div>
  <% end %>
</div>
