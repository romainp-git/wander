<div class="flex items-start space-x-2 mt-4 last:mb-5">
  <div class="flex items-center space-x-2">
    <div class="relative flex-shrink-0">
      <p class="w-10"><%= trip.end_date.strftime('%Y') if !trip.end_date.nil? %></p>
    </div>
    <div class="relative flex-shrink-0">
      <div class="w-3 h-3 bg-white rounded-full"></div>
    </div>
  </div>
  <div class="relative bg-cover bg-center rounded-lg shadow-md overflow-hidden h-40 w-full" style="background-image: url('https://images.unsplash.com/photo-1576375801517-45814f908aa4?q=80&w=3087&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
    <div class="absolute inset-0  bg-opacity-40 flex flex-col justify-center p-4">
      <p class="text-white italic text-sm mb-2">Du <%= trip.start_date  if !trip.start_date.nil? %> au <%= trip.end_date if !trip.end_date.nil? %></p>
      <h2 class="text-white font-bold text-lg"><%= trip.name %></h2>
      <p class="text-white italic text-xs">Avec Michel et Thierry</p>
      <div class="mt-4 w-full">
        <%= link_to trip_path(trip), class:"text-white text-sm font-semibold flex gap-1 justify-end items-center", data: { turbo_frame: "_top" } do %>
          Voir le voyage
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
