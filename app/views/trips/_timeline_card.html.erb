<%= link_to trip_path(trip), data: { turbo_frame: "_top" } do %>
  <li class="w-full mx-auto bg-white shadow-[0px_-5px_15px_-5px_rgba(0,0,0,0.3)] rounded-2xl overflow-hidden -mb-2 sticky top-safe-offset-10" data-sticked-element-target="card">

    <div class="p-4 box-border">
      <div class="relative flex justify-between items-center mb-4">
        <div class="absolute top-1/2 border-dotted border-t-2 w-1/2 left-1/4"></div>

        <div class="text-left flex-1">
          <p class="text-gray-500 text-xs">De</p>
          <p class="text-2xl text-black font-bold"><%= current_user&.city&.slice(0, 3)&.upcase || "" %></p>
          <p class="text-gray-400 text-sm"><%= current_user&.city || "" %>, <%= current_user&.country || "" %></p>
        </div>

        <div class=" rounded-full p-2 bg-white z-10">
          <span class="icon icon-400 text-blue-500 pt-2">sync_alt</span>
        </div>

        <div class="text-right flex-1">
          <p class="text-gray-500 text-xs">À</p>
          <p class="text-2xl text-black font-bold"><%= trip.destination&.city&.slice(0, 3)&.upcase || "" %></p>
          <p class="text-gray-400 text-sm"><%= trip.destination&.city %>, <%= trip.destination&.country %></p>
        </div>
      </div>

      <div class="border-dashed border-t border-gray-300 my-4"></div>

      <div class="flex justify-around">
        <div class="flex flex-col justify-center items-start gap-2 border-r-2 border-dotted flex-1 px-4">
          <span class="text-xs font-medium uppercase tracking-wide bg-orange-500 text-white px-3 py-1 rounded-full">
            Départ
          </span>
          <div class="flex items-center space-x-2 text-xs">
            <p class="text-gray-800  icon">today</p>
            <p class="text-gray-800 font-medium"><%= I18n.l(trip.start_date, format: "%d %b %Y")  if !trip.start_date.nil? %></p>
          </div>
        </div>

        <div class="flex flex-col justify-center items-start gap-2 flex-1 px-4">
          <span class="text-xs font-medium uppercase tracking-wide bg-orange-500 text-white px-3 py-1 rounded-full">
            Retour
          </span>
          <div class="flex items-center space-x-2 text-xs">
            <p class="text-gray-800  icon">event</p>
            <p class="text-gray-800 font-medium"><%= I18n.l(trip.end_date, format: "%d %b %Y")  if !trip.end_date.nil? %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="absolute bottom-10 left-0 w-6 h-6 bg-black rounded-full transform -translate-x-1/2"></div>
    <div class="absolute bottom-10 right-0 w-6 h-6 bg-black rounded-full transform translate-x-1/2"></div>
  </li>
<% end %>
